@model List<SchoolMgmt_SIT0346.Models.Context.Country>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pcoded-main-container">
    <div class="pcoded-wrapper">
        <div class="pcoded-content">
            <div class="pcoded-inner-content">
                <!-- [ breadcrumb ] start -->
                <div class="page-header">
                    <div class="page-block">
                        <div class="row align-items-center">
                            <div class="col-md-12">
                                <div class="page-header-title">
                                    <h5 class="m-b-10">Countries</h5>
                                </div>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html"><i class="feather icon-home"></i></a></li>
                                    <li class="breadcrumb-item"><a href="javascript:">All Countries</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- [ breadcrumb ] end -->
                <div class="main-body">
                    @if ((TempData["CountryError"]) != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            Country is Currently in use, Can't Delete.
                        </div>
                    }
                    <div class="page-wrapper">
                        <!-- [ Main Content ] start -->
                        <div class="row">
                            <!--[ Recent Users ] start-->
                            <div class="col-xl-8 col-md-6">
                                <div class="card Recent-Users">
                                    <div class="card-header">
                                        <h5>Countries</h5>
                                    </div>
                                    <div class="card-block px-0 py-3">
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <tbody>
                                                    @foreach (var country in Model)
                                                    {
                                                        <tr class="unread">
                                                            <td>
                                                                <h6 class="mb-1"> @(country.name)</h6>
                                                            </td>
                                                            <td>
                                                            </td>
                                                            <td>
                                                                <a href="/i18n/EditCountry/@(country.Id)" class="label theme-bg2 text-white f-12">Edit</a>
                                                                <a href="/i18n/EditCountry/1" class="label theme-bg text-white f-12">View</a>
                                                                <a href="/i18n/DeleteCountry/@(country.Id)" class="label bg-danger text-white f-12">Delete</a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--[ Recent Users ] end-->
                            <!-- [ statistics year chart ] start -->
                            <!-- [ statistics year chart ] end -->
                        </div>

                        <!-- [ Main Content ] end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
