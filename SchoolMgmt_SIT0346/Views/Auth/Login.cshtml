@model SchoolMgmt_SIT0346.Models.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="card">
    <div class="card-body text-center">
        <div class="mb-4">
            <i class="feather icon-unlock auth-icon"></i>
        </div>
        @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { id = "loginForm" }))
        {
            @Html.AntiForgeryToken()
            <h3 class="mb-4">Login</h3>
            <div class="input-group mb-3">
                @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Username)
            </div>
            <div class="input-group mb-4">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group text-left">
                <div class="checkbox checkbox-fill d-inline">
                    <input type="checkbox" name="checkbox-fill-1" id="checkbox-fill-a1" checked="">
                    <label for="checkbox-fill-a1" class="cr"> Save Details</label>
                </div>
            </div>
            <button class="btn btn-primary shadow-2 mb-4" type="submit">Login</button>
            <p class="mb-2 text-muted">Forgot password? <a href="/Auth/ResetPassword">Reset</a></p>
            <p class="mb-0 text-muted">Don’t have an account? <a href="/Auth/Signup">Signup</a></p>
        }
    </div>
</div>

